<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="好友名称 :"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_friendName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="验证信息 :"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_addMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_direct_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="直接添加好友" />

            <CheckBox
                android:id="@+id/check_request_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送验证消息" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_addFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="添加好友" />

    <Button
        android:id="@+id/btn_delete_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除好友" />

    <Button
        android:id="@+id/btn_add_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入黑名单" />

    <Button
        android:id="@+id/btn_remove_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除黑名单" />

    <Button
        android:id="@+id/btn_black_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取黑名单成员" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_addMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_accept_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意" />

            <Button
                android:id="@+id/btn_refuse_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>